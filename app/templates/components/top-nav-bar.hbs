<div class="top-nav-bar-bg"></div>
<div class="top-nav-bar-section --left">
  <div class="name">
    {{#link-to 'intern'}}
      <div class="logo">*</div>
      <div class="text not-on-medium">INFECTED</div>
    {{/link-to}}
  </div>
</div>


<div class="top-nav-bar-section --center">
  {{#link-to 'intern.monitor'}}
    <div class="link">
      <div class="icon">{{fa-icon 'heartbeat'}}</div>
      <div class="title">Monitor</div>
    </div>
  {{/link-to}}
</div>
<div class="top-nav-bar-section --center">
  {{#link-to 'intern.lab'}}
    <div class="link">
      <div class="icon">{{fa-icon 'medkit'}}</div>
      <div class="title">Lab</div>
    </div>
  {{/link-to}}
</div>
<div class="top-nav-bar-section --center">
  {{#link-to 'intern.leaderboard'}}
    <div class="link">
      <div class="icon">{{fa-icon 'trophy'}}</div>
      <div class="title">Leaderboard</div>
    </div>
  {{/link-to}}
</div>

<div class="top-nav-bar-section --right">
  <div class="currencies">
    <div class="currency {{if (gt me.user.rps 0) "active"}}">
      {{#tooltip-component direction="bottom" tooltip="Your diamonds. A special currency which you can use to speed up your development."}}
        {{me.user.rps}}
        <img src="assets/images/diamond.png" width="24px" height="24px" />
      {{/tooltip-component}}
    </div>
    <div class="currency {{if (gt me.user.rps 0) "active"}}">
      {{#tooltip-component direction="bottom" tooltip="Your Research Points (RPs) Needed in the search for a cure for diseases you've been infected with."}}
        {{me.user.rps}}
        <img src="assets/images/flask.png" width="24px" height="24px" />
      {{/tooltip-component}}
    </div>
    <div class="currency {{if (gt me.user.eps 0) "active"}}">
      {{#tooltip-component direction="bottom" tooltip="Your Evolution Points (EPs) Needed in developing your infections."}}
        {{me.user.eps}}
        {{#if (gt me.user.eps 0)}}
          <img src="assets/images/helix.png" height="24px" />
        {{else}}
          <img src="assets/images/helix_medium.png" height="24px" />
        {{/if}}
      {{/tooltip-component}}
    </div>
  </div>
  {{#top-nav-bar/dropdown cssClasses="--account"}}
    {{#top-nav-bar/dropdown-title}}
      <span class="account-img"><img src={{me.user.img_url}} /></span>
      <span class="nav-icon">{{fa-icon 'navicon'}}</span>
    {{/top-nav-bar/dropdown-title}}
    {{#top-nav-bar/dropdown-options}}
      {{#top-nav-bar/dropdown-option}}
        <a href="#">
          <div class="option only-on-small">
            {{fa-icon 'heartbeat'}} Monitor
          </div>
        </a>
      {{/top-nav-bar/dropdown-option}}
      {{#top-nav-bar/dropdown-option}}
        <a href="#">
          <div class="option only-on-small">
            {{fa-icon 'medkit'}} Lab
          </div>
        </a>
      {{/top-nav-bar/dropdown-option}}
      {{#top-nav-bar/dropdown-option}}
        <a href="#">
          <div class="option only-on-small">
            {{fa-icon 'trophy'}} Leaderboard
          </div>
        </a>
      {{/top-nav-bar/dropdown-option}}
      {{#top-nav-bar/dropdown-option}}
        <a href="#" >
          <div class="option" {{action 'logout'}}>
            {{fa-icon 'sign-out'}} Logout
          </div>
        </a>
      {{/top-nav-bar/dropdown-option}}
    {{/top-nav-bar/dropdown-options}}
  {{/top-nav-bar/dropdown}}

</div>
